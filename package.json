{
  "name": "ddd-task-demo",
  "version": "1.0.0",
  "private": true,
  "description": "Mini DDD Task (light) - TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:web": "esbuild src/browser/index.ts --bundle --format=esm --outfile=public/bundle.js --sourcemap",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.0",
    "esbuild": "^0.18.0"
  }
}